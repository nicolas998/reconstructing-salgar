journal = {Science of the Total Environment},
keywords = {Alternating Decision Trees,Flood susceptibility assessment,Logistic Model Trees,Machine learning,Na{\"{i}}ve Bayes Trees,Reduced Error Pruning Trees},
pages = {744--755},
publisher = {Elsevier B.V.},
title = {{A comparative assessment of decision trees algorithms for flash flood susceptibility modeling at Haraz watershed, northern Iran}},
url = {https://doi.org/10.1016/j.scitotenv.2018.01.266},
