keywords = {Mediterranean flash floods,Parameter sets regionalization,Process-oriented distributed model},
pages = {383--399},
publisher = {Elsevier B.V.},
title = {{Parameter regionalization for a process-oriented distributed model dedicated to flash floods}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2015.03.052},
volume = {525},
